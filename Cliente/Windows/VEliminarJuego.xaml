<Window x:Class="Cliente_TFG.Windows.VEliminarJuego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación" Height="200" Width="410"
        Background="#1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border CornerRadius="15" BorderBrush="#d11f45" BorderThickness="2" Padding="20" Background="#1E1E1E">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="380">

            <!-- Icono y mensaje principal -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Width="367">
                <TextBlock Text="🤔" FontSize="24" Foreground="#d11f45" Margin="0,0,10,0" Padding="2"/>
                <TextBlock x:Name="txtMensaje" Text="¿Seguro que quieres eliminar este juego?" 
                           FontSize="18" Foreground="White" VerticalAlignment="Center" TextWrapping="Wrap" Width="333"/>
            </StackPanel>

            <!-- Botones Sí y No -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
    <Button Content="Sí" Width="100" Height="30" Click="BtnSi_Click"
            Foreground="White" Background="Transparent" BorderBrush="#d11f45" BorderThickness="2"
            Cursor="Hand" Margin="0,0,20,0">
        <!-- Template aquí -->
    </Button>

    <Button Content="No" Width="100" Height="30" Click="BtnNo_Click"
            Foreground="White" Background="Transparent" BorderBrush="#d11f45" BorderThickness="2"
            Cursor="Hand">
        <!-- Template aquí -->
    </Button>
</StackPanel>

        </StackPanel>
    </Border>
</Window>